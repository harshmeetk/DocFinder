
<head>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css"></script>
</head>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip({placement: "bottom"});
    });

    var patiendId = function () {
        var url = window.location.href;
        var id = url.split('&')[1].split('=')[1];
        //document.getElementById('patiendId').value=id;
    }
</script>

<body onload="patiendId()">

<div onload="patiendId()">
{{#each data}}
        <div class="media">
            <ul class="nobullet">
                <li><img class="d-flex mr-3 imageWidth" src="{{this.doc_image}}" alt="Doctor"></li>
                <h5 class="mt-0"><br>{{this.doc_name}}, {{this.doc_title}}</h5>
                <li>{{this.doc_speciality}}</li>
                <li>{{this.doc_street}},</li>
                <li>{{this.doc_city}},</li>
                <li>{{this.doc_state}}</li>
            </ul>

            <div class="media-body">
                <ul class="nobullet">
                    <li><p>{{this.doc_edu}}</p></li>
                </ul>
                <div class="pure-g ">
                    <div class="pure-u-1-3 "><a data-toggle="tooltip" title="Average Patient Rating"> <img
                            src="{{this.doc_rating}}"></a></div>
                    <div class="pure-u-1-3"><a data-toggle="tooltip"
                                               title="Insurance Plans Supported by Dr. {{this.doc_name}}"> <i
                            class="fa fa-medkit fa-4x"
                            aria-hidden="true"></i><strong>{{this.doc_insurance}}</strong></a>
                    </div>
                    <div class="pure-u-1-3 "><a data-toggle="tooltip" title="Contact Number of Dr. {{this.doc_name}}"><i
                            class="fa fa-phone fa-4x" aria-hidden="true"></i>  {{this.doc_contact}}</a></div>


                </div>
                <form method="post" action="/confirmAppointment" onload="patiendId()">
                    <ul id="appointments" style="list-style: none; align-content: center">
                        <input onload="patiendId()" id="patiendId" type="text" name="patiendId"
                               value="{{this.patiendId}}" hidden>
                        <input type="text" hidden value="{{this._id}}" name="doc_name">
                        <input type="radio" name="slot" style="visibility: {{this.doc_timing_slots.slot1}}"
                               value="slot1" required>Monday,1100HRS-1200HRS
                        <li><input type="radio" name="slot" value="slot2"
                                   style="visibility: {{this.doc_timing_slots.slot2}}" required>Tuesday,1200HRS-1300HRS
                        </li>
                        <li><input type="radio" name="slot" value="slot3"
                                   style="visibility: {{this.doc_timing_slots.slot3}}" required>Wednesday,1300HRS-1400HRS
                        </li>
                        <li><input type="radio" name="slot" value="slot4"
                                   style="visibility: {{this.doc_timing_slots.slot4}}" required>Thursday,1400HRS-1500HRS
                        </li>
                        <li><input type="radio" name="slot" value="slot5"
                                   style="visibility: {{this.doc_timing_slots.slot5}}" required>Friday,1500HRS-1600HRS
                        </li>
                        <li>
                            <button type="submit"> Book Appointment</button>
                        </li>
                    </ul>
                </form>

            </div>
        </div>
    </div>




{{/each}}


</body>